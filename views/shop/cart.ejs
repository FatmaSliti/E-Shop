<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (products.length> 0) { %>
                    <ul class="cart__item-list">
                        <% products.forEach(prod=> { %>
                            <li class="cart__item">
                                <h1>
                                    <%= prod.title %>
                                </h1>
                                <h2>Quantity: <%= prod.cartItem.quantity %>
                                </h2>
                                <!-- cartItem : name of the model is a key given by sequelize that stores info about the in-between table           // the quantity is part of the related cartitem -->
                                <form action="/cart-delete-item" method="POST">
                                    <input type="hidden" value="<%= prod.id %>" name="productId" />
                                    <button class="btn danger" type="submit">Delete</button>
                                </form>
                            </li>
                            <% }); %>
                    </ul>
                    <br/>
                    <hr>
                    <br>
                    <div class="centered">
                        <form action="/create-order" method="POST">
                            <button type="submit" class="btn">Order Now!</button>
                        </form>
                    </div>

                    <% } else { %>
                        <h1>No Products in Cart!</h1>
                        <% } %>
            </main>
            <%- include('../includes/end.ejs') %>